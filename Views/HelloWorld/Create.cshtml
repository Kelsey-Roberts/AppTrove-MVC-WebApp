@model App


<h1>Add App</h1>

<hr/>

<div class="row">
    <div class="col-6">
        
        <div class="card">

            <div class="card-header">
                <h5>Add an app to the database</h5>
            </div>

            <div class="card-body">
                <form asp-controller="HelloWorld" asp-action="Edit" method="post">
                    <div class="mb-3">
                        <label class="form-label">App Name:</label>
                        <input asp-for=Name type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">App Price:</label>
                        <input asp-for=Price type="number" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">App Publisher:</label>
                        <input asp-for=Publisher type="text" class="form-control" />
					</div>
                    
                    <input type="hidden" asp-for="AppId" />

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                    
                </form>
            </div>

            <div class="card-footer">

            </div>

        </div>
        
        
        
        
        
    </div>
</div>